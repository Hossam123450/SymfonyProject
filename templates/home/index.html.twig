            <li><a class="dropdown-item" href="#">PRTG</a></li>
            <li><a class="dropdown-item" href="#">FR</a></li>
        </ul>
        </li>
        <li class="nav-item"><a class="nav-link" href="#">Login</a></li>
        <li class="nav-item"><a class="nav-link" href="#">Register</a></li>
    </ul>
    </div>
</div>
</nav>

<!-- Hero Section -->
<section id="home" class="hero">
    <div class="hero-content container">
        <!-- Left text -->
        <div class="hero-left">
            <h1>Find the perfect job for you</h1>
            <p>Your Gateway to Diverse Industries: Expert Job Placement and Consulting Services</p>
            <a href="#" class="btn btn-primary btn-lg">Upload Your CV</a>
        </div>

        <!-- Right carousel -->
        <div id="carouselExample" class="carousel slide carousel-container" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
            <img src="{{ asset('images/hero-slide-1.jpg') }}" class="d-block w-100" alt="Job 1">
            </div>
            <div class="carousel-item">
            <img src="{{ asset('images/hero-slide-2.jpg') }}" class="d-block w-100" alt="Job 2">
            </div>
            <div class="carousel-item">
            <img src="{{ asset('images/hero-slide-3.jpg') }}" class="d-block w-100" alt="Job 3">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
        </div>
    </div>
</section>

