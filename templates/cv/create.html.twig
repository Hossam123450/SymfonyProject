{% extends 'base.html.twig' %}

{% block styles %}
<style>
.card-cv {
    width: 100%;
    max-width: 600px;
    background-color: #fff;
    border-radius: 15px;
    padding: 40px 30px;
    box-shadow: 0 0 20px rgba(0,0,0,0.15);
    position: relative;
    z-index: 2;
}

.card-cv input.form-control,
.card-cv select.form-control,
.card-cv textarea.form-control {
    border-radius: 10px;
    padding: 10px;
    border: 1px solid #ccc;
    margin-bottom: 15px;
    font-size: 1rem;
}

.card-cv input.form-control:focus,
.card-cv select:focus,
.card-cv textarea:focus {
    border-color: #0d6efd;
    box-shadow: 0 0 5px rgba(13,110,253,0.5);
    outline: none;
}

.btn-submit-cv {
    display: inline-block;
    background: linear-gradient(45deg, #3e41de, #5a55ff, #0b5ed7, #3e66ff);
    background-size: 400% 400%;
    color: #fff !important;
    border-radius: 30px;
    padding: 14px 40px;
    border: none !important;
    font-weight: 600;
    font-size: 1.15rem;
    text-align: center;
    cursor: pointer;
    box-shadow: 0 8px 20px rgba(0,0,0,0.25), 0 0 15px rgba(62,65,222,0.6);
    position: relative;
    overflow: hidden;
    transition: all 0.4s ease;
    animation: gradientBG 8s ease infinite;
}

.btn-submit-cv:hover {
    transform: scale(1.1);
    box-shadow: 0 0 20px #3e41de, 0 0 30px #5a55ff, 0 0 40px #0b5ed7;
}

@keyframes gradientBG {
    0%{background-position:0% 50%;}
    50%{background-position:100% 50%;}
    100%{background-position:0% 50%;}
}

.back-home {
    position: absolute;
    top: 15px;
    left: 15px;
    text-decoration: none;
    font-size: 20px;
    color: #0d6efd;
    font-weight: bold;
}
.back-home:hover {
    text-decoration: underline;
}
</style>
{% endblock %}

{% block title %}Créer CV{% endblock %}

{% block body %}
<section class="hero d-flex align-items-center justify-content-center" style="min-height:100vh; background: url('{{ asset('images/hero-bg.jpg') }}') no-repeat center center/cover;">
    <div class="card-cv">
        <a href="{{ path('home') }}" class="back-home">&#8592; Home</a>

        <h2 class="text-center mb-4">Créer votre CV</h2>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">{{ message }}</div>
            {% endfor %}
        {% endfor %}

        {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}

        <div class="mb-3">{{ form_widget(form.phone, {'attr': {'class': 'form-control form-control-lg'}}) }}</div>
        <div class="mb-3">{{ form_widget(form.birthDate, {'attr': {'class': 'form-control form-control-lg'}}) }}</div>
        <div class="mb-3">{{ form_widget(form.gender, {'attr': {'class': 'form-control form-control-lg'}}) }}</div>
        <div class="mb-3">{{ form_widget(form.domain, {'attr': {'class': 'form-control form-control-lg'}}) }}</div>

        <div class="row mb-3">
            <div class="col">{{ form_widget(form.address, {'attr': {'class': 'form-control form-control-lg'}}) }}</div>
            <div class="col">{{ form_widget(form.city, {'attr': {'class': 'form-control form-control-lg'}}) }}</div>
            <div class="col">{{ form_widget(form.country, {'attr': {'class': 'form-control form-control-lg'}}) }}</div>
        </div>

        <div class="mb-3">{{ form_widget(form.cvFile, {'attr': {'class': 'form-control form-control-lg'}}) }}</div>

        <!-- Bouton stylé centré -->
        <div style="text-align:center; margin-top:20px;">
            <input type="submit" style="background-color: #3e41de;color: #fff;border-radius: 25px;" class="btn-submit-cv" value="Créer CV">
        </div>

        {{ form_end(form, {'render_rest': false}) }}
    </div>
</section>
{% endblock %}
