{% extends 'base.html.twig' %}

{% block title %}Créer CV{% endblock %}

{% block body %}
<div class="container py-5">
    <h2 class="mb-4">Créer votre CV</h2>

    {# Affichage des messages flash #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">{{ message }}</div>
        {% endfor %}
    {% endfor %}

    {# Formulaire #}
    {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}


    <div class="row mb-3">
        <div class="col-md-6">{{ form_row(form.phone) }}</div>
        <div class="col-md-6">{{ form_row(form.birthDate) }}</div>
    </div>
    <div class="row mb-3">
        <div class="col-md-12">{{ form_row(form.gender) }}</div>
    </div>
    <div class="row mb-3">
        <div class="col-md-12">{{ form_row(form.domain) }}</div>
    </div>
    <div class="row mb-3">
        <div class="col-md-4">{{ form_row(form.address) }}</div>
        <div class="col-md-4">{{ form_row(form.city) }}</div>
        <div class="col-md-4">{{ form_row(form.country) }}</div>
    </div>
    <div class="row mb-3">
        <div class="col-md-12">{{ form_row(form.cvFile) }}</div>
    </div>
    <div class="row">
        <div class="col-md-12">{{ form_row(form.submit) }}</div>
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}
