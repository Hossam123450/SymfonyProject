{% extends 'base.html.twig' %}

{% block styles %}
<style>
/* Hero */
.hero {
    min-height: 100vh;
}

/* Inputs stylés */
.card input.form-control {
    border-radius: 10px;
    padding: 10px;
    border: 1px solid #ccc;
    transition: all 0.3s ease;
}
.card input.form-control:focus {
    border-color: #0d6efd;
    box-shadow: 0 0 5px rgba(13,110,253,0.5);
    outline: none;
}

/* Bouton */
.btn-register {
    background-color: #3e41de !important;
    color: #fff !important;
    border-radius: 25px !important;
    padding: 10px 20px !important;
    border: 1px solid #3e41de !important;
    font-weight: bold !important;
    cursor: pointer !important;
    transition: all 0.3s ease !important;
}
.btn-register:hover {
    background-color: #0b5ed7 !important;
    color: #fff !important;
    border-color: #0b5ed7 !important;
}
</style>
{% endblock %}

{% block title %}Inscription{% endblock %}

{% block body %}
<section class="hero d-flex align-items-center justify-content-center" style="height:100vh; background: url('{{ asset('images/hero-bg.jpg') }}') no-repeat center center/cover;">

    <div class="card p-4 shadow-lg" style="width: 100%; max-width: 400px; border-radius: 15px; position: relative;">

        <!-- Flèche retour Home -->
        <a href="{{ path('home') }}" style="position: absolute; top: 15px; left: 15px; text-decoration: none; font-size: 20px;">&#8592; Home</a>

        <h2 class="text-center mb-4 mt-3">Créer un compte</h2>

        {# Messages flash #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">{{ message }}</div>
            {% endfor %}
        {% endfor %}

        {{ form_start(form) }}

        <div class="mb-3">
            {{ form_row(form.firstname, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            {{ form_row(form.password.first, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            {{ form_row(form.password.second, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3 d-grid">
            {{ form_widget(form.submit) }}
        </div>

        {{ form_end(form) }}

        <!-- Lien vers Login -->
        <p class="text-center mb-0 mt-2">
            Vous avez déjà un compte ? <a href="{{ path('app_login') }}" class="btn-login">Connexion</a>
        </p>

    </div>
</section>
{% endblock %}
